<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/passcode_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:text="Xin chào!">
        </TextView>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/tvphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:text="Nhập mật khẩu">
        </TextView>

        <LinearLayout
            android:id="@+id/lnPassCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <EditText
                android:inputType="numberPassword"
                android:id="@+id/edtNum1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_18"
                android:cursorVisible="false"
                android:backgroundTint="@color/white"
                />
            <EditText
                android:inputType="numberPassword"
                android:id="@+id/edtNum2"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_18"
                android:cursorVisible="false"
                android:backgroundTint="@color/white"
                />
            <EditText
                android:inputType="numberPassword"
                android:id="@+id/edtNum3"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_18"
                android:cursorVisible="false"
                android:backgroundTint="@color/white"
                />
            <EditText
                android:inputType="numberPassword"
                android:id="@+id/edtNum4"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_18"
                android:cursorVisible="false"
                android:backgroundTint="@color/white"
                />
            <EditText
                android:inputType="numberPassword"
                android:id="@+id/edtNum5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_18"
                android:cursorVisible="false"
                android:backgroundTint="@color/white"
                />
            <EditText
                android:inputType="numberPassword"
                android:id="@+id/edtNum6"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:maxLength="1"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_18"
                android:backgroundTint="@color/white"
                android:cursorVisible="false"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:text="@string/title_login"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/tvForgetPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUÊN MẬT KHẨU"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THOÁT TÀI KHOẢN"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_50"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>