<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/color_gray"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginBottom="51dp"/>-->

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <RelativeLayout
            android:id="@+id/rlVietSkin"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/home"/>
            <TextView
                android:id="@+id/tvVietSkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/img_home"
                android:text="@string/trang_chu"
                android:textSize="@dimen/sp_12"
                android:textColor="@drawable/bg_text_footer"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlDanhSach"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_bac_si"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bac_si"/>
            <TextView
                android:id="@+id/tvDanhSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/img_bac_si"
                android:text="@string/bac_si"
                android:textSize="@dimen/sp_12"
                android:textColor="@drawable/bg_text_footer"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlKhamOnline"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_kham_onl"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/kham_onl"/>
            <TextView
                android:id="@+id/tvKhamOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/img_kham_onl"
                android:text="@string/phien_tu_van"
                android:textSize="@dimen/sp_12"
                android:textColor="@drawable/bg_text_footer"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCaiDat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_cai_dat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/cai_dat"/>
            <TextView
                android:id="@+id/tvCaiDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/img_cai_dat"
                android:text="@string/cai_dat"
                android:textSize="@dimen/sp_12"
                android:textColor="@drawable/bg_text_footer"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav"
        >

    </RelativeLayout>
</RelativeLayout>
